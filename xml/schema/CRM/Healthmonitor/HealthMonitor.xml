<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Healthmonitor</base>
  <class>HealthMonitor</class>
  <name>civicrm_health_monitor</name>
  <comment>The app will collect and send health data</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique HealthMonitor ID</comment>
    <html>
      <type>Number</type>
    </html>
    <import>true</import>
    <export>true</export>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <import>true</import>
    <export>true</export>
  </field>

  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>date</name>
    <type>datetime</type>
    <comment>Device Data Time</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDateTime</formatType>
    </html>
    <required>true</required>
    <import>true</import>
    <export>true</export>
  </field>

  <field>
    <name>device_type_id</name>
    <title>Device Type</title>
    <type>int</type>
    <length>3</length>
    <default>1</default>
    <import>true</import>
    <export>true</export>
    <pseudoconstant>
      <optionGroupName>health_monitor_device_type</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>device_id</name>
    <type>int unsigned</type>
    <import>true</import>
    <export>true</export>
    <comment>FK to Device</comment>
    <required>true</required>
  </field>

  <foreignKey>
    <name>device_id</name>
    <table>civicrm_device</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>sensor_id</name>
    <title>Sensor</title>
    <type>int</type>
    <length>3</length>
    <default>1</default>
    <required>true</required>
    <import>true</import>
    <export>true</export>
    <pseudoconstant>
      <optionGroupName>health_monitor_sensor</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>sensor_value</name>
    <title>Sensor Value</title>
    <type>decimal</type>
    <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
    <required>true</required>
    <import>true</import>
    <export>true</export>
    <comment>Sensor Value</comment>
    <html>
      <type>Text</type>
    </html>
  </field>


</table>
