<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Healthmonitor</base>
  <class>HealthAlertRule</class>
  <name>civicrm_health_alert_rule</name>
  <comment>Health Alert Rule</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique HealthAlertRule ID</comment>
    <html>
      <type>Number</type>
    </html>
    <import>true</import>
    <export>true</export>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <import>true</import>
    <export>true</export>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>name</name>
    <type>varchar</type>
    <length>255</length>
    <label>Alert Name</label>
    <comment>Alert Name</comment>
    <required>true</required>
    <import>true</import>
    <export>true</export>
  </field>

  <index>
    <name>index_name</name>
    <fieldName>name</fieldName>
  </index>

  <field>
    <name>sensor_id</name>
    <title>Sensor</title>
    <type>int</type>
    <length>3</length>
    <default>1</default>
    <required>true</required>
    <import>true</import>
    <export>true</export>
    <pseudoconstant>
      <optionGroupName>health_monitor_sensor</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>rule_id</name>
    <title>Rule</title>
    <type>int</type>
    <length>5</length>
    <default>1</default>
    <required>true</required>
    <import>true</import>
    <export>true</export>
    <pseudoconstant>
      <optionGroupName>health_alert_rule_type</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

</table>
