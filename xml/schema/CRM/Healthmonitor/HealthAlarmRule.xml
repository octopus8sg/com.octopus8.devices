<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Healthmonitor</base>
  <class>HealthAlarmRule</class>
  <name>civicrm_health_alarm_rule</name>
  <comment>Health Alarm Rule (for message)</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique HealthAlarmRule ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>code</name>
    <type>varchar</type>
    <length>255</length>
    <label>Alarm Rule Code</label>
    <comment>Alarm Rule Code</comment>
    <required>true</required>
    <import>true</import>
    <export>true</export>
  </field>

  <index>
    <name>index_code</name>
    <fieldName>code</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>addressee_id</name>
    <type>int unsigned</type>
    <comment>FK to Address Contact</comment>
  </field>
  <foreignKey>
    <name>addressee_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>alert_id</name>
    <type>int unsigned</type>
    <comment>FK to Alert</comment>
  </field>
  <foreignKey>
    <name>alert_id</name>
    <table>civicrm_health_alert</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>



</table>
